{
  "name": "saw_frontend_app",
  "version": "1.0.0",
  "description": "The front end app for stevenalanwilson.com",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "test": "jest",
    "test:upSnap": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run sitemap && next build",
    "dev": "next",
    "start": "next start",
    "sitemap": "node scripts/generate-sitemap.js",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dominion79/Saw-Front-End-App.git"
  },
  "keywords": [
    "Nextjs",
    "Node",
    "React",
    "Javascript",
    "TypeScript"
  ],
  "author": "Steven Wilson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dominion79/Saw-Front-End-App/issues"
  },
  "homepage": "https://github.com/dominion79/Saw-Front-End-App#readme",
  "dependencies": {
    "@babel/preset-react": "^7.24.7",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@sentry/nextjs": "^10.32.1",
    "@vercel/analytics": "^1.3.2",
    "dayjs": "^1.11.13",
    "eslint-config-next": "^15.5.9",
    "gray-matter": "^4.0.3",
    "next": "^16.1.1",
    "normalize.css": "^8.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rehype-class-names": "^2.0.0",
    "rehype-document": "^7.0.3",
    "rehype-format": "^5.0.0",
    "rehype-react": "^8.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "tailwindcss": "^3.4.6",
    "unified": "^11.0.5",
    "validator": "^13.15.22"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.24.8",
    "@eslint/compat": "^2.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@jest/types": "^30.2.0",
    "@next/bundle-analyzer": "^16.1.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.3.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "autoprefixer": "^10.4.19",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^16.2.7",
    "nock": "^14.0.10",
    "prettier": "^3.7.4",
    "react-test-renderer": "^19.2.3",
    "regenerator-runtime": "^0.14.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jestSonar": {
    "sonar56x": true,
    "reportPath": "testResults",
    "reportFile": "sonar-report.xml",
    "indent": 4
  },
  "browser": {
    "fs": false,
    "os": false,
    "path": false
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
